@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ecom.minhhai.bookstore.Models.OrderModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
            <h1>List Order Page</h1>

            <p>
                <a class="btn btn-sm btn-info">Total Revenue: $@ViewBag.TotalPriceAllOrder.00</a>
            </p>
           
       <table class="table table-dark table-hover" style="margin-top: 20px">
            <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Customer Name</th>
      <th scope="col">Price</th>
      <th scope="col">Order Date</th>
      <th scope="col">Transact Status</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
            @if(Model != null)
            {
                foreach (var item in Model)
                {
                     <tr>
                      <th scope="row">@item.OrderId</th>
                      <td>@item.AccountModel.FullName</td>
                      <td>$@item.TotalPrice.00</td>
                      <td>@item.OrderDate.ToShortDateString()</td>
                      <td>@item.TransactStatusModel.Status</td>

                        <td>
                             <a class="btn btn-sm btn-info" asp-area="Admin" asp-controller="AdminOrders" asp-action="Details" asp-route-id="@item.OrderId">View</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
       </table>
</div>  

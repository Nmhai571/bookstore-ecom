@model OrderModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1>Order Details</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="AdminPages" asp-action="Edit" asp-route-id="@Model.OrderId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId"/>
            <input type="hidden" asp-for="OrderDate"/>
            <table class="table table-dark table-hover" style="margin-top: 20px">
            <thead>
    <tr>
      <th scope="col">Book Id</th>
      <th scope="col">Book Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
            @if(Model != null)
            {
                foreach (var item in Model.OrderDetailModels)
                {
                     <tr>
                      <th scope="row">@item.BookModel.BookId</th>
                      <td>@item.BookModel.BookName</td>
                      <td>@item.Quanlity</td>
                      <td>$@item.Total.00</td>
                    </tr>
                }
            }
        </tbody>
       </table>

        </form>
         
            
    </div>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

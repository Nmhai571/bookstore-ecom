@model ecom.minhhai.bookstore.Models.BookModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <h4>Delete: @Model.BookName</h4>
    <hr />
    <dl class="row">
        <div class="col-md-6">
            <form asp-controller="AdminBook" asp-action="Delete" asp-route-id="@Model.BookId">
                <input type="hidden" asp-for="BookId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                <br />
                  <div class="mb-3">
                    <label class="form-label">Book Id</label>
                    <input class="form-control" value="@Model.BookId" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Book Name</label>
                    <input class="form-control" value="@Model.BookName" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Book Description</label>
                    <input class="form-control" value="@Model.BookDescription" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Author</label>
                    <input class="form-control" value="@Model.Author" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input class="form-control" value="@Model.Price" disabled style="background-color: #2c2e33">
                  </div>
                   <div class="mb-3">
                    <label class="form-label">Category</label>
                    <input class="form-control" value="@Model.CategoryModel.CategoryName" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Discount</label>
                    <input class="form-control" value="@Model.Discount" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Thumbnail</label>
                    <input class="form-control" value="@Model.Thumbnail" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Create Date</label>
                    <input class="form-control" value="@Model.CreateDate" disabled style="background-color: #2c2e33">
                  </div>
                        @if(Model.BestSellers == true)
                        {
                             <div class="mb-3">
                                <label class="form-label">Best Sellers</label>
                                <input class="form-control" value="True" disabled style="background-color: #2c2e33">
                              </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label">Best Sellers</label>
                                <input class="form-control" value="False" disabled style="background-color: #2c2e33">
                              </div>
                        }

                        @if(Model.HomeFlag == true)
                        {
                              <div class="mb-3">
                                <label class="form-label">Home Flag</label>
                                <input class="form-control" value="True" disabled style="background-color: #2c2e33">
                              </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label">Home Flag</label>
                                <input class="form-control" value="False" disabled style="background-color: #2c2e33">
                              </div>
                        }
                        @if(Model.Active == true)
                        {
                              <div class="mb-3">
                                <label class="form-label">Active</label>
                                <input class="form-control" value="True" disabled style="background-color: #2c2e33">
                              </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <label class="form-label">Active</label>
                                <input class="form-control" value="False" disabled style="background-color: #2c2e33">
                              </div>
                        }
               
                 
                  
                  <div class="mb-3">
                    <label class="form-label">Tags</label>
                    <input class="form-control" value="@Model.Tags" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input class="form-control" value="@Model.Title" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Alias</label>
                    <input class="form-control" value="@Model.Alias" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Meta Desc</label>
                    <input class="form-control" value="@Model.MetaDesc" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Meta Key</label>
                    <input class="form-control" value="@Model.MetaKey" disabled style="background-color: #2c2e33">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Units In Stock</label>
                    <input class="form-control" value="@Model.UnitsInStock" disabled style="background-color: #2c2e33">
                  </div>


            </form>
        </div>
</div>

@model ecom.minhhai.bookstore.Models.RoleModel

@{
    ViewData["Title"] = "Chỉnh Sửa Quyền Truy Cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh Sửa Quyền Truy Cập</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

@model IEnumerable<ecom.minhhai.bookstore.Models.RoleModel>

@{
    ViewData["Title"] = "Quản Lý Quyền Truy Cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Danh sách thành viên</h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12 text-right">
                        <a asp-area="Admin" asp-controller="AdminRole" asp-action="Create" class="btn btn-sm btn-success">Thêm mới</a>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <div class="table-responsive">
                                <table class="table" id="example">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Role Name</th>
                                            <th>#</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                @if(Model != null)
                                {
                                    foreach(var item in Model)
                                    {
                                        <tr>
                                            <td>@item.RoleId</td>
                                            <td>@item.RoleName</td>
                                            <td>
                                                <a class="btn btn-sm btn-info" asp-area="Admin" asp-controller="AdminRole" asp-action="Details" asp-route-id="@item.RoleId">View</a>
                                                <a class="btn btn-sm btn-primary" asp-area="Admin" asp-controller="AdminRole" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
                                                <a class="btn btn-sm btn-danger" asp-area="Admin" asp-controller="AdminRole" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </div>

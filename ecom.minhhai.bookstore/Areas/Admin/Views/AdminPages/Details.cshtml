@model ecom.minhhai.bookstore.Models.PageModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details: @Model.PageName</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="AdminPages" asp-action="Edit" asp-route-id="@Model.PageId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageId"/>
            <input type="hidden" asp-for="Thumbnail"/>
            <input type="hidden" asp-for="CreateDate"/>
            <div class="form-group">
                <label asp-for="PageName" class="control-label">Page Name</label>
                <input asp-for="PageName" class="form-control" disabled style="background-color: #2c2e33" />
                <span asp-validation-for="PageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" disabled style="background-color: #2c2e33"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaDesc" class="control-label">Meta Desc</label>
                <input asp-for="MetaDesc" class="form-control" disabled style="background-color: #2c2e33"/>
                <span asp-validation-for="MetaDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaKey" class="control-label">Meta Key</label>
                <input asp-for="MetaKey" class="form-control" disabled style="background-color: #2c2e33"/>
                <span asp-validation-for="MetaKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alias" class="control-label">Alias</label>
                <input asp-for="Alias" class="form-control" disabled style="background-color: #2c2e33"/>
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordering" class="control-label">Ordering</label>
                <input type="number" asp-for="Ordering" class="form-control" disabled style="background-color: #2c2e33"/>
                <span asp-validation-for="Ordering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thumbnail" class="control-label">Thumbnail</label>
                <input name="file" type="text" asp-for="Thumbnail" class="form-control-file" disabled style="background-color: #2c2e33; color: white" />
                <span asp-validation-for="Thumbnail" class="text-danger"></span>
            </div>
            @if(Model.Pubished == true)
            {
                <div class="form-group">
                <label class="control-label">Pubished</label>
                <input class="form-control" disabled style="background-color: #2c2e33" value="True"/>
                </div>
            }
            else
            {
                <div class="form-group">
                <label class="control-label">Pubished</label>
                <input class="form-control" disabled style="background-color: #2c2e33" value="False"/>
                </div>
            }

            <div class="form-group">
                <label asp-for="Contents" class="control-label">Contents</label>
                <textarea id="myTextarea" asp-for="Contents"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>

        </form>
         
            
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.PageId">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>

    <script>
    $(document).ready(function() {
    tinymce.init({
        selector: 'textarea', 
        height: 300, 
        plugins: 'link image code', 
        toolbar: 'undo redo | bold italic | alignleft aligncenter alignright | code', 
    });
});
</script>
}

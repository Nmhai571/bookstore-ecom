@model ecom.minhhai.bookstore.Models.AccountModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<OrderModel> lsOrder = ViewBag.ListOrder;
}

<main class="main">
      <section class="section-box shop-template mt-30">
        <div class="container box-account-template">
          <h3>Hello, @Model.FullName!</h3>
          <div class="box-tabs mb-100">
            <ul class="nav nav-tabs nav-tabs-account" role="tablist">
              <li><a href="#tab-orders" data-bs-toggle="tab" role="tab" aria-controls="tab-orders" aria-selected="true">Orders</a></li>
              <li><a  href="#tab-setting" data-bs-toggle="tab" role="tab" aria-controls="tab-setting" aria-selected="true">Setting</a></li>
            </ul>
            <div class="border-bottom mt-20 mb-40"></div>
            <div class="tab-content mt-30">
                    
                    <div class="tab-pane fade" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders">
                    @if(lsOrder != null && lsOrder.Count > 0)
                    {
                        @foreach (var item in lsOrder)
                            {
                                string url = Url.Action("Index", "Order", new {orderId = item.OrderId });
                                <div class="box-orders">
                                  <div class="head-orders">
                                    <div class="head-left">
                                      <h5 class="mr-20">Order ID: #@item.OrderId</h5><span class="font-md color-brand-3 mr-20">Date: @item.OrderDate</span><span class="label-delivery">Delivery in progress</span>
                                    </div>
                                    <div class="head-right"><a href="@url" class="btn btn-buy font-sm-bold w-auto">View Order</a></div>
                                  </div>
                                  @foreach (var itemDetail in item.OrderDetailModels)
                                    {
                                        
                                        <div class="body-orders">
                                    <div class="list-orders">
                                      <div class="item-orders">
                                        <div class="image-orders"><img src="~/ImageUpload/BookImage/@itemDetail.BookModel.Thumbnail" alt="Ecom"></div>
                                        <div class="info-orders">
                                          <h5>@itemDetail.BookModel.BookName</h5>
                                        </div>
                                        <div class="quantity-orders">
                                          <h5>Quantity: @itemDetail.Quanlity</h5>
                                        </div>
                                        <div class="price-orders">
                                          <h3>$@itemDetail.Total</h3>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                    }
                                  
                                </div>
                            }
                    
                    }
                    else
                    {
                        <h4>There are no orders!</h4>
                    }
                    
               
              </div>
              <div class="tab-pane fade" id="tab-setting" role="tabpanel" aria-labelledby="tab-setting">
                <div class="row">
                  <div class="col-lg-6 mb-20">
                    <form action="#" method="get">
